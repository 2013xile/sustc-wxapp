<!--loading-->
<view wx:if="{{ load == 'loading' }}" class="loading">
  <image style="width: 100px; height: 100px" src="../../imgs/loading.gif"></image>
</view>

<!--load successfully-->
<view wx:if="{{ load == true }}">
  <view class="card">
    <picker bindchange="pickTerm" value="{{ i }}" range="{{ terms }}">
      <view class="picker">
        {{ terms[i] }}
      </view>
    </picker>
    <view>
      <text>GPA</text>
    </view>
    <view class="gpanum">
      <text>{{ GPA }}</text>
    </view>
  </view>
  <view class="score">
    <view class="score-item">
      <text class="subject">科目</text>
      <text class="weight">学分</text>
      <text class="level">等级</text>
    </view>
    <view wx:for="{{ scoreTable }}" wx:key="*this">
      <view wx:if="{{ item.term == terms[i] }}" class="score-item">
        <text class="subject">{{ item.subject }}</text>
        <text class="weight">{{ item.weight }}</text>
        <text class="level">{{ item.level }}</text>
      </view>
    </view>
  </view>
</view>

<!--load failed-->
<view wx:if="{{ !load }}">
  <text>{{ msg }}</text>
</view>